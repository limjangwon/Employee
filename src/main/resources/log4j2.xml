<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
 
	<!-- Appender, Layout 설정 -->
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %5p [%c] %m%n"/>
		</Console>
		
		<file name="MyFile" target="app.log">
			<PatternLayout pattern="%d %5p [%c] %m%n"/>
		</file>
	</Appenders>
 
	<!-- Logger 설정 -->
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="console"/>
			<AppenderRef ref="Myfile"/>
		</Root>
	</Loggers>
 
</Configuration>